<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/tweets_margin">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="@dimen/avatar_img_size"
        android:layout_height="@dimen/avatar_img_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivProfileImage"
        android:layout_marginStart="@dimen/tweets_margin"
        android:textStyle="bold"
        tools:text="Balls Name"
        />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvName"
        android:layout_marginStart="@dimen/tweets_margin"
        tools:text="balls12"
        />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivProfileImage"
        android:layout_below="@id/tvScreenName"
        android:layout_marginStart="@dimen/tweets_margin"
        android:layout_marginTop="@dimen/slim_tweets_margin"
        android:autoLink="all"
        android:linksClickable="true"
        tools:text="me when balls" />

    <ImageView
        android:id="@+id/ivTweetImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tweets_margin"
        android:layout_below="@id/tvBody"
        android:layout_toEndOf="@id/ivProfileImage"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvScreenName"
        android:layout_marginStart="@dimen/tweets_margin"
        tools:text="| a minute ago"/>


</RelativeLayout>